<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign up</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f0f0f0;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        form {
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0px 0px 10px 0px rgba(0, 0, 0, 0.1);
            width: 300px;
        }

        h2 {
            text-align: center;
            color: #333;
        }

        label {
            font-weight: bold;
            color: #555;
        }

        input[type="text"],
        input[type="email"],
        input[type="password"] {
            width: 100%;
            padding: 8px;
            margin-bottom: 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
            color: #fff;
        }

        input[type="submit"] {
            width: 100%;
            background-color: #4CAF50;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
        }

        input[type="submit"]:hover {
            background-color: #45a049;
        }

        .return-btn {
            display: inline-block;
            background-color: #555;
            color: #fff;
            padding: 10px 20px;
            text-decoration: none;
            text-align: center;
            border-radius: 4px;
            width: 86.7%;
            transition: background-color 0.3s ease;
        }

        .return-btn:hover {
            background-color: #333;
        }
    </style>
</head>

<body>
    <form id="reg-form" method="post">
        <h2>Registration</h2>
        <label for="username">Username:</label>
        <input type="text" id="username" name="username">
        <div id="error-username" class="error-message"></div>

        <label for="email">Email:</label>
        <input type="email" id="email" name="email">
        <div id="email-error" class="error-message"></div>

        <label for="password">Password:</label>
        <input type="password" id="password" name="password">
        <div id="password-error" class="error-message"></div>
        <div id="error-general" class="error-message"></div>

        <input type="submit" value="Sign Up">
        <br>
        <br>
        <a href="/" class="return-btn">Return</a>
    </form>

    <script>
        const form = document.getElementById('reg-form');
        const usernameErrorElement = document.getElementById('error-username');
        const emailErrorElement = document.getElementById('email-error');
        const passwordErrorElement = document.getElementById('password-error');
        const generalErrorElement = document.getElementById('error-general');

        form.addEventListener('submit', registerUser);

        async function registerUser(event) {
            event.preventDefault();

            const username = document.getElementById('username').value;
            const email = document.getElementById('email').value;
            const password = document.getElementById('password').value;

            const result = await fetch('/api/register', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({
                    username,
                    email,
                    password
                })
            }).then((res) => res.json()); {
                usernameErrorElement.innerHTML = '';
                emailErrorElement.innerHTML = '';
                passwordErrorElement.innerHTML = '';

                // Проверка ошибки и отображение соответствующего сообщения
                if (result.status !== 'ok') {
                    switch (result.error) {
                        case 'Invalid username':
                            usernameErrorElement.innerHTML = 'Invalid username';
                            break;
                        case 'Invalid email':
                            emailErrorElement.innerHTML = 'Invalid email';
                            break;
                        case 'Invalid password':
                            passwordErrorElement.innerHTML = 'Invalid password';
                            break;
                        default:
                            // Если ни одно из предыдущих условий не сработало
                            usernameErrorElement.innerHTML = 'An error occurred while registering';
                            break;
                    }
                } else {
                    // Если регистрация прошла успешно, перенаправить пользователя
                    window.location.href = "/";
                }

            }
        }

    </script>

</body>

</html>