<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Basket</title>
  </head>
  <body>
    <div class="container mt-3">
      <h2>Shopping Cart</h2>
      <ul id="cart-list">
        <% existingOrder.products.forEach((item) => { %>
          <li>
            <%= item.productName %> - Quantity: <%= item.quantity %> -
            <% if (item.totalPrice !== undefined) { %>
              $<%= item.totalPrice.toFixed(2) %>
            <% } else { %>
              Price not available
            <% } %>
          </li>
        <% }); %>
      </ul>
      <p>Total: $<span id="cart-total"><%= calculateCartTotal(existingOrder.products).toFixed(2) %></span></p>
    </div>
    <%

    function calculateCartTotal(cart) {
        // Implement your logic to calculate the total price of the shopping cart
        return cart.reduce((total, item) => total + (item.totalPrice || 0), 0);
    }

    %>
  </body>
</html>
